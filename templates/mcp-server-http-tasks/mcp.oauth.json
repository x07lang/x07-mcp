{
  "schema_version": "x07.mcp.oauth@0.2.0",
  "resource": "http://127.0.0.1:8080/mcp",
  "serve_root_alias": true,
  "authorization_servers": ["https://auth.example.com"],
  "scopes_supported": ["mcp:tools", "mcp:tasks"],
  "bearer_methods_supported": ["header"],
  "validation": {
    "kind": "test_static",
    "static_tokens": [
      { "token": "TOKEN_TOOLS", "sub": "dev-user", "scope": "mcp:tools" },
      { "token": "TOKEN_TASKS", "sub": "dev-user", "scope": "mcp:tasks" },
      { "token": "TOKEN_BOTH", "sub": "dev-user", "scope": "mcp:tools mcp:tasks" }
    ]
  }
}
